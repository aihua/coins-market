<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <context:annotation-config />
    <context:component-scan base-package="com.app.coins" />

    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/library3000"/>
        <property name="username" value="root"/>
        <property name="password" value="password"/>
    </bean>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="packagesToScan" value="com.app.coins.domain" />
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
            </props>
        </property>
    </bean>

    <bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="localhost" />
        <property name="port" value="25" />
    </bean>
<!--
    <bean id="mailService" class="com.app.coins.service.MailService">
        <property name="mailSender" ref="mailSender" />
    </bean>-->

    <!-- Dao -->

    <bean id="coinDao" class="com.app.coins.dao.GenericDaoImpl">
        <constructor-arg value="com.app.coins.domain.Coin"/>
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="countryDao" class="com.app.coins.dao.GenericDaoImpl">
        <constructor-arg value="com.app.coins.domain.Country"/>
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="subscriberDao" class="com.app.coins.dao.GenericDaoImpl">
        <constructor-arg value="com.app.coins.domain.Subscriber"/>
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

</beans>